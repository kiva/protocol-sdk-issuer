{
    "headerImage": "kiva_small.jpeg",
    "locale": "en",
    "agent_port": "7567",
    "cloudAgent": "kiva",
    "token": "auth0 token here",
    "verification_options": [
        {
            "id": "QR",
            "title": "Issue Credential to Mobile Wallet",
            "guardian": false,
            "sequence": ["webcam", "registrationForm", "issuance"]
        },
        {
            "id": "QR",
            "title": "Create Cloud Wallet",
            "guardian": false,
            "sequence": ["webcam", "registrationForm", "otp"]
        }
    ],
    "phoneIntls": {
        "only": false,
        "countries": ["us", "tw"]
    },
    "credentialDefinition": "employee.cred.def.json",
    "credentialKeys": {
        "firstName": {
            "name": "First Name",
            "dataType": "text",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "lastName": {
            "name": "Last Name",
            "dataType": "text",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "companyEmail": {
            "name": "Company Email",
            "dataType": "text",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "currentTitle": {
            "name": "Current Title",
            "dataType": "text",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "team": {
            "name": "Team",
            "dataType": "text",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "hireDate": {
            "name": "Hire Date",
            "dataType": "date",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "officeLocation": {
            "name": "Office Location",
            "dataType": "text",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "phoneNumber": {
            "name": "Phone Number",
            "dataType": "phoneNumber",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "photo~attach": {
            "name": "Photo",
            "dataType": "image/jpeg;base64",
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "type": {
            "name": "Type",
            "dataType": "selection",
            "options": ["Employee", "Intern", "Contractor", "Fellow", "Other"],
            "credentials": {
                "employee.cred.def.json": true
            }
        },
        "endDate": {
            "name": "End Date",
            "dataType": "date",
            "credentials": {
                "employee.cred.def.json": true
            }
        }
    },
    "env": {
        "prod": {
            "controllerUrlBase": "PRODUCTION!",
            "permittedOrigins": "https://www.kiva.org",
            "actions": {
                "includeOnly": ["reset", "enableStandalone"]
            },
            "permittedIframeHosts": ["https://www.kiva.org"],
            "permittedOpenerOrigins": ["https://pro-cluster-kiva.web.app"],
            "isProd": true
        },
        "sandbox": {
            "controllerUrlBase": "https://sandbox-gateway.protocol-prod.kiva.org",
            "inherits": ["prod"]
        },
        "qa": {
            "controllerUrlBase": "http://localhost:8080",
            "isProd": true,
            "permittedOrigins": "http://localhost:8080,http://localhost:3000,https://www.kiva.org",
            "permittedOpenerOrigins": ["https://pro-cluster-kiva.web.app", "http://localhost:3000"],
            "permittedIframeHosts": ["https://www.kiva.org", "http://localhost:3000", "http://localhost:8080"]
        },
        "dev": {
            "controllerUrlBase": "http://localhost:8080",
            "inherits": ["qa"]
        }
    }
}
